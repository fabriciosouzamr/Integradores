@model Painel.Models.Entidades.Integracao

@{
    ViewData["Title"] = "Integração - Editar";
}

<h2>Integração - Editar</h2>

<h4>Integração</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Integracao_Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Código</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idEmpresa" class="control-label">Empresa</label>
                <select asp-for="idEmpresa" class="form-control" asp-items="@ViewBag.Empresa"></select>
            </div>
            <div class="form-group">
                <label asp-for="idTipoIntegracao" class="control-label">Tipo de Integração</label>
                <select asp-for="idTipoIntegracao" class="form-control" asp-items="@ViewBag.TipoIntegracao"></select>
            </div>
            <div class="form-group">
                <label asp-for="idBancoConexaoOrigem" class="control-label">Banco de Dados de Origem</label>
                <select asp-for="idBancoConexaoOrigem" class="form-control" asp-items="@ViewBag.BancoDadosOrigem"></select>
            </div>
            <div class="form-group">
                <label asp-for="idBancoConexaoDestino" class="control-label">Banco de Dados de Destino</label>
                <select asp-for="idBancoConexaoDestino" class="form-control" asp-items="@ViewBag.BancoDadosDestino"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Integracao">Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
